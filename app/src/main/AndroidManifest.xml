<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.armariovirtual">
    <!-- PERMISOS DE INTERNET -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Permisos para la cámara -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- A partir de la API 28 ó Android 9 es necesaria la siguiente linea para permitir el trafico HTTP -->
    <!-- android:usesCleartextTraffic="true" -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:usesCleartextTraffic="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.armariovirtual.LoginActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.armariovirtual.MainActivityDrawer"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.example.armariovirtual.MainActivityDrawerAdmin"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.example.armariovirtual.RegistroInicial"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.example.armariovirtual.MiArmario"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.example.armariovirtual.ActividadAddPrenda"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.example.armariovirtual.ActividadEliminar"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.example.armariovirtual.ActividadConsultar"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.example.armariovirtual.ActividadInfoPrendaCompleta"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.example.armariovirtual.MiCuenta"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.example.armariovirtual.Informacion"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>