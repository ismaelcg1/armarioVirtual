<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/appToolbar"
            layout="@layout/clase_toolbar" />
    </LinearLayout>

    <ScrollView
        style="@style/layoutScrollViewActividadAddPrenda"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                style="@style/layoutImageViewActividadAddPrenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView10"
                    style="@style/estiloTextoInicialActividadAddPrenda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/textoExplicativoFotoActividadInsertar" />

                <ImageButton
                    android:id="@+id/imageViewInsertarImagen"
                    style="@style/estiloImageViewActividadAddPrenda"
                    android:background="@drawable/add_image"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/textView5"
                    style="@style/textosExplicativosActividadAddPrenda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/textoExplicativoActividadInsertar" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/nombrePrenda"
                        style="@style/estiloNombreIdentificativoActividadAddPrenda"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/nombreActividadInsertar"
                        android:inputType="textPersonName" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tallaPrenda"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:hint="@string/tallaActividadInsertar" />
                        </android.support.design.widget.TextInputLayout>

                        <Button
                            android:id="@+id/bTalla"
                            style="@style/estiloBotonesInsertarActividadAddPrenda"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/cambiarActividadInsertar" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/estiloPrenda"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:hint="@string/estiloActividadInsertar" />
                        </android.support.design.widget.TextInputLayout>

                        <Button
                            android:id="@+id/bEstilo"
                            style="@style/estiloBotonesInsertarActividadAddPrenda"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/seleccionarActividadInsertar" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/colorPrenda"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <android.support.design.widget.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:editable="false"
                                    android:hint="@string/colorActividadInsertar" />
                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                        <Button
                            android:id="@+id/bColor"
                            style="@style/estiloBotonesInsertarActividadAddPrenda"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/seleccionarActividadInsertar" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/epocaPrenda"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:hint="@string/epocaActividadInsertar" />
                        </android.support.design.widget.TextInputLayout>

                        <Button
                            android:id="@+id/bEpoca"
                            style="@style/estiloBotonesInsertarActividadAddPrenda"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/seleccionarActividadInsertar" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/categoriaPrenda"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:hint="@string/categoriaActividadInsertar" />
                        </android.support.design.widget.TextInputLayout>

                        <Button
                            android:id="@+id/bCategoria"
                            style="@style/estiloBotonesInsertarActividadAddPrenda"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/seleccionarActividadInsertar" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/subcategoriaPrenda"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:hint="@string/subcategoriaActividadInsertar" />
                        </android.support.design.widget.TextInputLayout>

                        <Button
                            android:id="@+id/bSubcategoria"
                            style="@style/estiloBotonesInsertarActividadAddPrenda"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/seleccionarActividadInsertar" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bSubirPrenda"
                    style="@style/estiloBotonSubirActividadAddPrenda"
                    android:layout_height="wrap_content"
                    android:text="@string/registrarPrendaActividadInsertar" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>