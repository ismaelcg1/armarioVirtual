<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".LoginActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/LoginActivityLayoutPrincipal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                style="@style/LoginActivityLayoutSuperior"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/LoginActivityTextoInicialLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        style="@style/LoginActivityEstiloTextoInicial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/textoInicialActividadLogin"
                        android:textStyle="normal|bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/LoginActivityImagenLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="match_parent"
                            android:layout_height="260sp"
                            app:srcCompat="@drawable/wardrobe_icon" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="vertical"></LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                style="@style/LoginActivityestiloFotoEntrar"
                                app:srcCompat="@drawable/entrar" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="vertical"></LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly"
                style="@style/LoginActivityLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/emailActividadLogin">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:selectAllOnFocus="true"
                            android:textColor="@color/colorNegro"
                            android:textColorHint="@color/colorNegro"
                            android:textColorLink="@color/colorPrimary"
                            android:textSize="17sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textPassword"
                        style="@style/LoginActivityMargenInferior"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundColor="@color/colorRojoOscuro"
                        app:boxStrokeColor="@color/colorNegro"
                        app:hintAnimationEnabled="true"
                        app:passwordToggleEnabled="false">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="-5sp"
                            android:hint="@string/passwordActividadLogin"
                            android:inputType="textPassword"
                            android:textColorLink="@color/colorPrimary"
                            android:textSize="17sp" />
                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView3"
                            style="@style/LoginActivityTextos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15sp"
                            android:text="@string/textoPasswordOlvidadaActividadLogin" />

                        <TextView
                            android:id="@+id/cambiaPassword"
                            style="@style/LoginActivityTextos"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8sp"
                            android:clickable="true"
                            android:gravity="left"
                            android:text="@string/textoPasswordOlvidadaCambiarActividadLogin" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    style="@style/LoginActivityMargenSuperiorTerminosBotonEntrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/checkBoxTerminosCondiciones"
                        style="@style/LoginActivityCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:text="@string/terminosCondicionesActividadLogin"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnIniciarSesion"
                        style="@style/LoginActivityEstiloBotonesInferiores"
                        android:layout_width="250sp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_redondeado2"
                        android:text="@string/textoBotonActividadLogin" />
                </LinearLayout>

                <LinearLayout
                    style="@style/LoginActivityLayoutInferior"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/textoNoCuenta"
                            style="@style/LoginActivityTextoNoCuenta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:shadowColor="@color/common_google_signin_btn_text_dark_focused"
                            android:singleLine="false"
                            android:text="@string/textoNoTengoCuentaActividadLogin"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btnCrearNuevaCuenta"
                            style="@style/LoginActivityEstiloBotonesInferiores"
                            android:layout_height="wrap_content"
                            android:background="@drawable/boton_redondeado1"
                            android:text="@string/textoCrearCuentaActividadLogin" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView4"
                            style="@style/LoginActivityTextoNoCuenta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/textoRegistroGoogleActividadLogin" />

                        <Button
                            android:id="@+id/button2"
                            style="@style/LoginActivityEstiloBotonesInferiores"
                            android:layout_width="160sp"
                            android:layout_height="wrap_content"
                            android:text="GOOGLE, NO VA" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>