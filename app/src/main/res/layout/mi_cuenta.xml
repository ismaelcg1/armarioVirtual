<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/appToolbar"
            layout="@layout/clase_toolbar" />
    </LinearLayout>

    <LinearLayout
        style="@style/layoutMainActivityDrawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/usuario_masculino80" />

            <TextView
                android:id="@+id/textView16"
                style="@style/estiloTextoEmailMiCuenta"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="correo@gmail.com" />
        </LinearLayout>

        <LinearLayout
            style="@style/layoutSecundariosMiCuenta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    style="@style/estiloTextosSuperioresMiCuenta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/alturaMiCuenta" />

                <Button
                    android:id="@+id/button8"
                    style="@style/estiloBotonesSuperioresMiCuenta"
                    android:layout_weight="1"
                    android:background="@drawable/editar480" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14"
                    style="@style/estiloTextosSuperioresMiCuenta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/pesoMiCuenta" />

                <Button
                    android:id="@+id/button9"
                    style="@style/estiloBotonesSuperioresMiCuenta"
                    android:layout_weight="1"
                    android:background="@drawable/editar480" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    style="@style/estiloTextosSuperioresMiCuenta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tallaMiCuenta"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/button10"
                    style="@style/estiloBotonesSuperioresMiCuenta"
                    android:layout_weight="1"
                    android:background="@drawable/editar480" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/layoutSecundariosMiCuenta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                style="@style/estilolayoutInferioresMiCuenta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView19"
                    style="@style/estiloTextosInferioresMiCuenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cerrarSesionMiCuenta" />

                <Button
                    android:id="@+id/btnCerrarSesion"
                    style="@style/estiloBotonesInferioresMiCuenta"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/cerrar_sesion96" />
            </LinearLayout>

            <LinearLayout
                style="@style/estilolayoutInferioresMiCuenta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView20"
                    style="@style/estiloTextosInferioresMiCuenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cambiarPasswordMiCuenta" />

                <Button
                    android:id="@+id/btnCambiarPassword"
                    style="@style/estiloBotonesInferioresMiCuenta"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/cambio_password96" />
            </LinearLayout>

            <LinearLayout
                style="@style/estilolayoutInferioresMiCuenta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView18"
                    style="@style/estiloTextosInferioresMiCuenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eliminarTodoContenidoArmarioMiCuenta" />

                <Button
                    android:id="@+id/btnEliminarArmario"
                    style="@style/estiloBotonesInferioresMiCuenta"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/eliminar_armario96" />
            </LinearLayout>

            <LinearLayout
                style="@style/estilolayoutInferioresMiCuenta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView17"
                    style="@style/estiloTextosInferioresMiCuenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eliminarCuentaMiCuenta" />

                <Button
                    android:id="@+id/btnEliminarCuenta"
                    style="@style/estiloBotonesInferioresMiCuenta"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/eliminar_usuario96" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>