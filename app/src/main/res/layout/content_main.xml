<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivityDrawer"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/wardrobe_icon" />
    </LinearLayout>

    <LinearLayout
        style="@style/layoutMainActivityDrawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nombreUsuario"
            style="@style/saludoMainActivityDrawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/saludoMainActivityDrawer" />

        <TextView
            android:id="@+id/prendasAdd"
            style="@style/prendasAddMainActivityDrawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prendasAnadidasMainActivityDrawer" />

        <TextView
            android:id="@+id/accesoriosAdd"
            style="@style/prendasAddMainActivityDrawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prendasAnadidasMainActivityDrawer" />

    </LinearLayout>
</LinearLayout>