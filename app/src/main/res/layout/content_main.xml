<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivityDrawer"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/layoutSuperiorContentMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombreUsuario"
                    style="@style/saludoContentMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/saludoMainActivityDrawer" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="440sp"
                    app:srcCompat="@drawable/wardrobe_icon" />
            </LinearLayout>

            <LinearLayout
                style="@style/layoutTextoInformativoContentMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/prendasAdd"
                    style="@style/prendasAddContentMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/prendasAnadidasMainActivityDrawer" />

            </LinearLayout>

            <LinearLayout
                style="@style/layoutInferiorBotonContentMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bVerArmario"
                    style="@style/estiloBotonContentMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/verMiArmarioMainActivityDrawer" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>