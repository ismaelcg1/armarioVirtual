<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagenPrenda"
            style="@style/estiloImagenListItemPrendas"
            android:layout_width="match_parent"
            android:layout_height="140sp"
            app:srcCompat="@mipmap/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        style="@style/estiloLayoutTextosListItemPrendas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/subcategoriaPrenda"
            style="@style/estiloTextosListItemPrendas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBCATEGORIA:" />

        <TextView
            android:id="@+id/tallaPrenda"
            style="@style/estiloTextosListItemPrendas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TALLA:" />

        <TextView
            android:id="@+id/estiloPrenda"
            style="@style/estiloTextosListItemPrendas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ESTILO:" />

        <TextView
            android:id="@+id/cantidadDePrendas"
            style="@style/estiloTextosListItemPrendas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CANTIDAD:" />
    </LinearLayout>

</LinearLayout>