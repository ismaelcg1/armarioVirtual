<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Mis estilos -->

    <!-- LOGIN -->
    <style name="LoginActivityLayoutPrincipal">
        <item name="android:layout_margin">5sp</item>
    </style>
    <style name="LoginActivityImagenLogin">
        <item name="android:gravity">center|right</item>
    </style>
    <style name="LoginActivityTextoInicialLayout">
        <item name="android:gravity">center</item>
    </style>
    <style name="LoginActivityEstiloTextoInicial">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorNegro</item>
        <item name="android:layout_marginTop">5sp</item>
    </style>
    <style name="LoginActivityLayout">
        <item name="android:paddingBottom">12sp</item>
        <item name="android:paddingLeft">12sp</item>
        <item name="android:paddingRight">12sp</item>
    </style>
    <style name="LoginActivityMargenInferior">
        <item name="android:layout_marginBottom">12sp</item>
    </style>
    <style name="LoginActivityMargenSuperior">
        <item name="android:layout_marginTop">14sp</item>
    </style>
    <style name="LoginActivityMargenSuperiorTerminosBotonEntrar">
        <item name="android:layout_marginTop">5sp</item>
    </style>
    <style name="LoginActivityMargenSuperiorBotones" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/boton_redondeado1</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="LoginActivityTextos">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorNegro</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LoginActivityTextoNoCuenta" parent="LoginActivityTextos">
        <item name="android:layout_marginTop">12sp</item>
    </style>
    <style name="LoginActivityestiloFotoEntrar">
        <item name="android:layout_height">140sp</item>
        <item name="android:layout_width">160sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- REGISTRO INICIAL -->
    <style name="PrimerRegistroLayoutPrincipal">
        <item name="android:layout_marginRight">14sp</item>
        <item name="android:layout_marginLeft">14sp</item>
        <item name="android:layout_marginBottom">14sp</item>
    </style>
    <style name="PrimerRegistroLayoutDatosSecundarios">
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_marginBottom">10sp</item>
    </style>
    <style name="PrimerRegistroLayoutParteSecundaria">
        <item name="android:layout_margin">8sp</item>
    </style>
    <style name="PrimerRegistroLayoutImagen">
        <item name="android:gravity">center</item>
    </style>
    <style name="PrimerRegistroTextoInicial">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">10sp</item>
    </style>
    <style name="PrimerRegistroTextos">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="PrimerRegistroBotonesNumberPicker">
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:layout_margin">4sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="estiloTextosNumberPicker">
        <item name="android:layout_margin">2sp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="estiloLayoutPrincipalNumberPicker">
        <item name="android:layout_margin">8sp</item>
    </style>
    <style name="PrimerRegistroBotonRegistrar">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:layout_marginTop">5sp</item>
    </style>

    <!-- MainActivityDrawer-->
    <style name="saludoMainActivityDrawer" >
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="prendasAddMainActivityDrawer">
        <item name="android:textSize">17sp</item>
    </style>
    <style name="layoutMainActivityDrawer">
        <item name="android:layout_margin">10sp</item>
    </style>

    <!-- MiCuenta-->
    <style name="layoutSecundariosMiCuenta" >
        <item name="android:layout_margin">15sp</item>
    </style>
    <style name="estiloBotonesInferioresMiCuenta" >
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="estiloBotonesSuperioresMiCuenta">
        <item name="android:layout_marginLeft">7sp</item>
        <item name="android:layout_marginRight">7sp</item>
        <item name="android:layout_marginTop">15sp</item>
        <item name="android:layout_width">110sp</item>
        <item name="android:layout_height">50sp</item>
    </style>
    <style name="estiloTextosInferioresMiCuenta" >
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="estiloTextosSuperioresMiCuenta" >
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="estiloTextoEmailMiCuenta" >
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="estilolayoutInferioresMiCuenta" >
        <item name="android:layout_marginTop">5sp</item>
    </style>

    <!-- ActividadFotos -->
    <style name="layoutImageViewActividadFotos">
        <item name="android:gravity">center</item>
    </style>
    <style name="estiloImageViewActividadFotos">
        <item name="android:layout_width">230sp</item>
        <item name="android:layout_height">280sp</item>
        <item name="android:layout_margin">10sp</item>
    </style>
    <style name="layoutScrollViewActividadFotos">
        <item name="android:layout_marginLeft">4sp</item>
        <item name="android:layout_marginRight">4sp</item>
        <item name="android:layout_margin">5sp</item>
    </style>

</resources>
